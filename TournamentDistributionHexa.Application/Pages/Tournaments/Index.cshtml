@page
@model TournamentDistributionHexa.Application.Pages.Tournaments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Game
            </th>
            <th>
                Scores
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tournoi in Model.Tournois)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => tournoi.Game.Name)
                </td>
                <td>
                    <ul>
                    @foreach(var score in tournoi.Scores)
                    {
                        <li>@score.Player.Lastname @score.Player.Firstname @score.Player.Telephone</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
