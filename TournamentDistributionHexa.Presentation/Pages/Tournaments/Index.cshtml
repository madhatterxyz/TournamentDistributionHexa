@page
@model TournamentDistributionHexa.Application.Pages.Tournaments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Tournaments list</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Start date
            </th>
            <th>
                End date
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tournament in Model.Tournaments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => tournament.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => tournament.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => tournament.EndDate)
                </td>
                <td><a asp-page="/Scores/Index" asp-route-tournamentId="@tournament.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
